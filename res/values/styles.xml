<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:popupMenuStyle">@style/MyActionBar.PopupMenu</item>
        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="popupMenuStyle">@style/MyActionBar.PopupMenu</item>
    </style>
    
    <!-- ActionBar styles -->
    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/foursquare_blue</item>
        <!-- Support library compatibility -->
        <item name="background">@color/foursquare_blue</item>
    </style>
    
    <!-- ActionBar Menu styles -->
    <style name="MyActionBar.MenuStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Menu">
	</style>
	<style name="MyActionBar.PopupMenu" parent="@android:style/Widget.Holo.Light.PopupMenu">
        <item name="android:popupBackground">@color/white_bg</item>
        <item name="android:dropDownSelector">@color/twitter_blue</item>
    </style>

</resources>