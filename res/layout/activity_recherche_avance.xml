<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/abc_button_padding_horizontal_material">
        

        <TextView
            android:id="@+id/step_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center_horizontal"
            android:text="@string/some_text"
            android:textAllCaps="false"
            android:textColor="@color/foursquare_blue"
            android:textColorHint="@color/foursquare_blue"
            android:textColorLink="@color/foursquare_blue"
            android:textSize="@dimen/abc_text_size_headline_material"
            android:textStyle="bold"/>

        <android.support.v4.view.ViewPager
            android:id="@+id/step_page"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.47" />
        
        <com.viewpagerindicator.CirclePageIndicator
            android:id="@+id/titles"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"/>

         <Button
            android:id="@+id/SearchBtn"
            style="@style/BlueButton"
            android:layout_gravity="end"
            android:text="@string/event_search"
            android:textColor="@color/white_bg"/>
         
</LinearLayout>
</FrameLayout>
